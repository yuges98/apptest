<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tasty_roots_primary_background"
    tools:context=".HomePage">

    <!-- App Title -->
    <TextView
        android:id="@+id/textView_appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/app_name"
        android:textColor="@color/tasty_roots_accent_yellow"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Desired Food Button -->
    <Button
        android:id="@+id/button_desiredFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="18dp"
        android:text="Desired Food"
        android:textAllCaps="false"
        android:textColor="@color/tasty_roots_primary_background"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_appTitle" />

    <!-- Healthy Food Button -->
    <Button
        android:id="@+id/button_healthyFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="18dp"
        android:text="Healthy Food"
        android:textAllCaps="false"
        android:textColor="@color/tasty_roots_primary_background"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_desiredFood" />

    <!-- Make My Food Button -->
    <Button
        android:id="@+id/button_makeMyFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="18dp"
        android:text="Make My Food"
        android:textAllCaps="false"
        android:textColor="@color/tasty_roots_primary_background"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_healthyFood" />

    <!-- Vibes Button -->
    <Button
        android:id="@+id/button_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="12dp"
        android:text="@string/button_vibes_text"
        android:textAllCaps="false"
        android:textColor="@color/tasty_roots_primary_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_healthyTips"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Healthy Tips Button (Bottom Right) -->
    <Button
        android:id="@+id/button_healthyTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="12dp"
        android:text="Healthy Tips"
        android:textAllCaps="false"
        android:textColor="@color/tasty_roots_primary_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_news" />

</androidx.constraintlayout.widget.ConstraintLayout>
